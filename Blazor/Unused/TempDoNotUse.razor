@using Du.Blazor.Components
@inherits ComponentContent

<TagElement Tag="@TagName" Class="@CssClass" UserAttrs="@UserAttrs">
	<CascadingValue Value="this" IsFixed="true">
		@ChildContent
	</CascadingValue>
</TagElement>

@code {
	[Parameter] public string? Text { get; set; }

	[CascadingParameter] public ComponentContent? Parent { get; set; }
	[Parameter] public DropAutoClose AutoClose { get; set; }

	//private ElementReference _self;
	private string TagName = "p";
}

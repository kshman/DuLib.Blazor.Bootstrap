@inherits ContentItemContainer

<CascadingValue Value="this" IsFixed="true">
	@ChildContent
</CascadingValue>

<nav class="@CssClass" id="@Id" @attributes="UserAttrs">
	@foreach (var item in Items)
	{
		var current = item == SelectedItem;
		<a 
			role="button" 
			class="@CssCompose.Join("nav-link", current.IfTrue("active"), item.CssClass)" 
			id="@item.Id"
			@onclick="async () => await HandleOnClickAsync(item)">
			@item.Text
			@item.Display
		</a>
	}
</nav>

@if (TabOnly is false)
{
	<div class="tab-content">
		@foreach (var item in Items)
		{
			var current = item == SelectedItem;
			<div class="@CssCompose.Join("tab-pane", current.IfTrue("active"))">
				@(item.Content ?? item.ChildContent)
			</div>
		}
	</div>
}

@code {
	[Parameter] public NavLayout Layout { get; set; } = NavLayout.None;
	[Parameter] public bool TabOnly { get; set; } //= false;

	//
	protected override void OnComponentClass(CssCompose css)
	{
		css
			.Add("nav")
			.Add(Layout.ToCss());
	}

	//
	protected Task HandleOnClickAsync(ContentItem tab) =>
		SelectItemAsync(tab);
}
